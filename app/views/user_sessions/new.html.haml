%h1 Вход

= form_for @user_session, :url => user_session_path do |f|
  = f.error_messages
  %p
    = f.label :login, "имя"
    %br
    = f.text_field :login
  %p
    = f.label :password, "пароль"
    %br
    = f.password_field :password
  %p
    = f.check_box :remember_me
    = f.label :remember_me, "запомнить"
  %p
    = f.submit "Вход"

