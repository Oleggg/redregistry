= semantic_form_for [:vocabularies, @district] do |f|
  = f.inputs do
    = f.input :name, :required => true
    = f.input :region, :required => true, :as => :select, :collection => Region.all
  = f.buttons do
    = f.commit_button "Сохранить"
    %li{:class=>"link"}
      или
      = link_to 'Вернутся', vocabularies_districts_path

