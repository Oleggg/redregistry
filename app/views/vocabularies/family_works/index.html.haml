- title(FamilyWork.model_name.human)

%h1= FamilyWork.model_name.human

%table
  %tr
    %th= FamilyWork.human_attribute_name(:id)
    %th= FamilyWork.human_attribute_name(:name)
    %th{:colspan=>"2"}

  - @family_works.each do |family_work|
    %tr
      %td= family_work.id
      %td= family_work.name
      %td= link_to 'Изменить', edit_vocabularies_family_work_path(family_work)
      %td= link_to 'Удалить', vocabularies_family_work_path(family_work), :confirm => 'Вы уверены?', :method => :delete

= will_paginate @family_works

= link_to 'Добавить', new_vocabularies_family_work_path

