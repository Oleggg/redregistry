- title(City.model_name.human)

%h1= City.model_name.human

%table
  %tr
    %th= City.human_attribute_name(:id)
    %th= City.human_attribute_name(:name)
    %th= City.human_attribute_name(:region)
    %th{:colspan=>"2"}

  - @cities.each do |city|
    %tr
      %td= city.id
      %td= city.name
      %td= city.region.name if city.region
      %td= link_to 'Изменить', edit_vocabularies_city_path(city)
      %td= link_to 'Удалить', vocabularies_city_path(city), :confirm => 'Вы уверены?', :method => :delete

= will_paginate @cities

= link_to 'Добавить', new_vocabularies_city_path

